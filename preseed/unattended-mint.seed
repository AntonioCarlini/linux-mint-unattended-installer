### BEGIN CUSTOM PARTITIONING ###
# 
ubiquity partman-auto/choose_recipe select disk_layout
#ubiquity partman-auto/expert_recipe_file string /cdrom/unattended/files/partitioning-recipe.txt
#
# /boot   255 MB
# efi     128 MB
# /        20 GB
# /home   remaining free space
#
# The "free" partition is the "Reserved for BIOS" area.
#
ubiquity partman-auto/expert_recipe string                    \
      disk_layout ::                                          \
              1 1 1 fat32                                     \
                      method{ biosgrub }                      \
              .                                               \
              522 100009 600 fat32                            \
                      $primary{ }                             \
                      bootable{ }                             \
                      $iflabel{ gpt }                         \
                      $reusemethod{ }                         \
                      method{ efi } format{ }                 \
                      mountpoint{ /boot/efi }                 \
		      .                                       \
              256 100008 256 ext4                             \
                      $primary{ }                             \
                      method{ format } format{ }              \
                      use_filesystem{ } filesystem{ ext4 }    \
                      mountpoint{ /boot }                     \
              .                                               \
              2000 2000 2000 linux-swap                       \
                      $lvmok{ } lv_name{ swap }               \
                      method{ swap } format{ }                \
              .                                               \
              500 10000 1000000000 ext4                       \
                      $lvmok{ } lv_name{ home }               \
                      method{ format } format{ }              \
                      use_filesystem{ } filesystem{ ext4 }    \
                      mountpoint{ /home }                     \
              .                                               \
              20000 20000 20000 ext4                          \
                      $lvmok{ } lv_name{ root }               \
                      method{ format } format{ }              \
                      use_filesystem{ } filesystem{ ext4 }    \
                      mountpoint{ / }                         \
              .                                               \

### END CUSTOM PARTITIONING ###

